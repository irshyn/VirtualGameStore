@model CVGS.Data.Event

@{
    ViewBag.Title = "Edit Event";
}

@Styles.Render("~/Content/site")
<style type="text/css">
    .form-control-xwide {
        min-width: 700px;
        width: auto;
    }

    .form-control-wide {
        min-width: 500px;
        width: auto;
    }

    .form-control-narrow {
        min-width: 100px;
        width: 100px;
    }
</style>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <p>Required fields are marked with <span style="color:red;font-weight:bolder"><sup>&#8902;</sup></span></p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control form-control-wide" })
            @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control form-control-xwide", rows = 10 })
            @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.StartTime, "{0:s}", new { @class = "form-control", type = "datetime-local" })
            @Html.ValidationMessageFor(model => model.StartTime, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.EndTime, "{0:s}", new { @class = "form-control", type = "datetime-local" })
            @Html.ValidationMessageFor(model => model.EndTime, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaxAttendeeNumber, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.MaxAttendeeNumber, new { @class = "form-control form-control-narrow" })
            @Html.ValidationMessageFor(model => model.MaxAttendeeNumber, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsIRL, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsIRL, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsIRL, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Location, new { @class = "form-control form-control-wide" })
            @Html.ValidationMessageFor(model => model.Location, null, new { @class = "text-danger" })
        </div>
    </div>

    // submit button
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Cancel", "Index", "Event", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            // to mark required fields with a red asteriks
            $('input[type=text], input[type=datetime-local], textarea').each(function () {
                var req = $(this).attr('data-val-required');
                if (undefined != req) {
                    var label = $('label[for="' + $(this).attr('id') + '"]');
                    var text = label.text();
                    if (text.length > 0) {
                        label.append('<span style="color:red;font-weight:bold"er> <sup>&#8902;</sup></span>');
                    }
                }
            });
        });
    </script>
}
