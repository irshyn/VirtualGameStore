@model CVGS.Data.Game

<style>
    .game-tile {
        color: white;
        border: 1px solid lightskyblue;
        border-radius: 0.25rem;
        padding: 0;
        margin-bottom: 3rem;
    }

    .game-tile-footer {
        background-image: url(https://store.steampowered.com/public/images/v6/home/background_spotlight.jpg);
        padding: 1rem;
    }

    .game-image {
        width: 100%;
        max-height: 300px;
        min-height: 300px;
    }
</style>

<a href="/Home/ViewGame/@(Model.Id)">
    <div class="col-md-4">
        <div class="game-tile" title="Click to view game details">

            <img src="@(Model.ImageUrl)" alt="Game Cover of @Model.Title" class="game-image" />

            <div class="game-tile-footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col pull-left">
                            @Html.DisplayFor(item => item.Title)
                            (@Html.DisplayFor(item => item.PlatformName))
                        </div>
                        <div class="col pull-right">
                            @Html.DisplayFor(item => item.Price)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>